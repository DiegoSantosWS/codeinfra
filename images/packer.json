{
    "variables": {
        "do_api_token": "{{env `DIGITALOCEAN_TOKEN`}}"
    },
    "builders": [
        {
            "type": "digitalocean",
            "api_token": "{{user `do_api_token`}}",
            "image": "ubuntu-20-04-x64",
            "region": "nyc1",
            "size": "s-1vcpu-1gb",
            "ssh_username": "root"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "echo not overridden",
                "curl -fsSL https://get.docker.com | sh"
            ]
        }
    ]
}